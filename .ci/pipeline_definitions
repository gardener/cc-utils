cc-utils:
  inherit:
    gh_pages_repo: &gh_pages_repo
      repos:
      - name: 'gh_pages'
        path: 'gardener/cc-utils'
        branch: 'gh-pages'
    release_traits: &release_traits
      version:
        preprocess: 'finalize'
        inject_effective_version: True
      publish:
        # oci-builder: 'kaniko'
        dockerimages:
          job-image:
            registry: 'docker_io_write'
            image: 'registry-1.docker.io/gardenerci/cc-job-image'
            dockerfile: 'Dockerfile'
            tag_as_latest: True
            inputs:
              steps:
                release_to_pypi: ~
            resource_labels:
              - name: 'cloud.cnudie/examples'
                value: 'this is an example label (btw: value may be also e.g. a dict)'
          kaniko-image:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/cc/job-image-kaniko'
            dockerfile: 'Dockerfile.kaniko'
            tag_as_latest: True
      release:
        nextversion: 'bump_minor'
        release_callback: '.ci/bump_job_image_version.py'
        release_notes_policy: disabled

  background_image: https://media1.giphy.com/media/VkMV9TldsPd28/giphy.gif
  template: 'default'
  base_definition:
    repo:
      disable_ci_skip: True
    traits:
      version: ~
      component_descriptor: ~
  jobs:
    head-update:
      steps:
        test: ~
        lint: ~
      traits:
        notifications:
          default:
            on_error:
              triggering_policy: 'only_first'
        publish:
          oci-builder: 'kaniko'
          dockerimages:
            kaniko-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/cc/job-image-kaniko'
              dockerfile: 'Dockerfile.kaniko'
              tag_as_latest: False

    pull-request:
      steps:
        test: ~
        lint: ~
      traits:
        pull-request:
          policies:
            require-label: 'reviewed/ok-to-test' # default
            build-forks: true # default

    release_job_image:
      <<: *gh_pages_repo
      steps:
        test: ~
        lint: ~
        release_to_pypi:
          depends: ['test', 'lint']
          output_dir: 'pypi'
        generate_documentation:
          publish_to: ['gh_pages']
      traits:
        <<: *release_traits

    force_release_job_image:
      <<: *gh_pages_repo
      steps:
        release_to_pypi:
          output_dir: 'pypi'
      traits:
        <<: *release_traits

    create_upgrade_prs:
      traits:
        cronjob:
          interval: '2.5m'
        update_component_deps: ~
