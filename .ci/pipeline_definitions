cc-utils:
  inherit:
    gh_pages_repo: &gh_pages_repo
      repos:
      - name: 'gh_pages'
        path: 'gardener/cc-utils'
        branch: 'gh-pages'

  background_image: https://media1.giphy.com/media/VkMV9TldsPd28/giphy.gif
  template: 'default'
  base_definition:
    repo:
      disable_ci_skip: True
    traits:
      version: ~
      component_descriptor: ~
  jobs:
    head-update:
      steps:
        test: ~
        lint: ~
        build_python_packages:
          output_dir: 'pypi'
      traits:
        notifications:
          default:
            on_error:
              triggering_policy: 'only_first'
        publish:
          oci-builder: 'docker'
          dockerimages:
            job-image:
              image: 'eu.gcr.io/gardener-project/cc/job-image'
              dockerfile: 'Dockerfile'
              tag_as_latest: False
              inputs:
                steps:
                  build_python_packages: ~
            kaniko-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/cc/job-image-kaniko'
              dockerfile: 'Dockerfile.kaniko'
              tag_as_latest: False
              inputs:
                steps:
                  build_python_packages: ~
            whd-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/cc/whd'
              dockerfile: 'Dockerfile.whd'
              tag_as_latest: False
              inputs:
                steps:
                  build_python_packages: ~

    pull-request:
      steps:
        test: ~
        lint: ~
      traits:
        options:
          public_build_logs: True
        pull-request:
          policies:
            require-label: 'reviewed/ok-to-test' # default
            build-forks: true # default

    release_job_image:
      <<: *gh_pages_repo
      steps:
        test: ~
        lint: ~
        build_python_packages:
          output_dir: 'pypi'
        release_to_pypi:
          trait_depends: ['release']
          inputs:
            'pypi_path': 'pypi_path'
        generate_documentation:
          publish_to: ['gh_pages']
      traits:
        version:
          preprocess: 'finalize'
          inject_effective_version: True
        publish:
          oci-builder: 'docker'
          dockerimages:
            job-image:
              registry: 'docker_io_write'
              image: 'eu.gcr.io/gardener-project/cc/job-image'
              dockerfile: 'Dockerfile'
              tag_as_latest: True
              inputs:
                steps:
                  build_python_packages: ~
              resource_labels:
                - name: 'cloud.cnudie/examples'
                  value: 'this is an example label (btw: value may be also e.g. a dict)'
            kaniko-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/cc/job-image-kaniko'
              dockerfile: 'Dockerfile.kaniko'
              tag_as_latest: True
              inputs:
                steps:
                  build_python_packages: ~
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/bump_job_image_version.py'
          release_notes_policy: disabled
          release_on_github: False

    create_upgrade_prs:
      traits:
        cronjob:
          interval: '2.5m'
        update_component_deps:
          ignore_prerelease_versions: yes
          merge_policies:
          - component_names:
            - 'github.com/gardener/component-spec'
            merge_mode: 'auto_merge'
            merge_method: 'rebase'
