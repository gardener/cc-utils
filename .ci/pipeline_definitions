cc-utils:
  inherit:
    gh_pages_repo: &gh_pages_repo
      repos:
      - name: 'gh_pages'
        path: 'gardener/cc-utils'
        branch: 'gh-pages'

    release_traits: &release_traits
      version:
        preprocess: 'finalize'
        inject_effective_version: True
      publish:
        dockerimages:
          job-image:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/cc/job-image'
            dockerfile: 'Dockerfile'
            tag_as_latest: True
            inputs:
              steps:
                release_to_pypi: ~
      release:
        nextversion: 'bump_minor'
        release_callback: '.ci/bump_job_image_version.py'
        release_notes_policy: disabled

  template: 'default'
  base_definition:
    repo:
      disable_ci_skip: True
    traits:
      version:
        versionfile: 'ci/version'
      component_descriptor: ~
  jobs:
    head-update:
      steps:
        test: ~
        lint: ~
      traits:
        notifications:
          default:
            on_error:
              triggering_policy: 'only_first'

    pull-request:
      steps:
        test: ~
        lint: ~
      traits:
        pull-request:
          policies:
            require-label: 'reviewed/ok-to-test' # default
            build-forks: true # default

    release_job_image:
      <<: *gh_pages_repo
      steps:
        test: ~
        lint: ~
        release_to_pypi:
          output_dir: 'pypi'
        generate_documentation:
          publish_to: ['gh_pages']
      traits:
        <<: *release_traits

    force_release_job_image:
      <<: *gh_pages_repo
      steps:
        release_to_pypi:
          output_dir: 'pypi'
      traits:
        <<: *release_traits
